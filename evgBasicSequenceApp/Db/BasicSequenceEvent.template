#
# Event Code Record
#
record(longout,"$(PV):EventCode") {
    field(DESC,"$(Event): Event Code")
    field(DTYP,"EVG Basic Seq Event")
    field(OUT,"@Name=$(Event);Fn=Event Code;C=$(C);Seq=$(Seq)")
    field(SCAN,"Passive")
    field(PINI,"YES")
    field(EGU,"")
    field(DRVH,"255")
    field(DRVL,"0")
    field(HOPR,"255")
    field(LOPR,"0")
    field(VAL,"$(Code)")
}

