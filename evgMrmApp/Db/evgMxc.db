    field( INP , "#C$(cardNum) S$(mxcNum) @")
    field( ZNAM, "0")
    field( ONAM, "1")
}

record(ao, "$(P)$(N)Freq") {
    field( DTYP, "EVG Mxc")
    field( DESC, "EVG Mux Frequency")
    field( OUT,  "#C$(cardNum) S$(mxcNum) @")
    field( VAL,  "1")
    field( UDF,  "0")
    field( EGU,  "Hz")
    field( HOPR, "62500000")
    field( LOPR, "0.029")
    field( DRVH, "62500000")
    field( DRVL, "0.029")
    field( PREC, "3")
    field( FLNK, "$(P)$(N)Freq:RB")
