record(bo, "$(P)$(N)Polarity") {
    field( DTYP, "EVG Mxc")
    field( DESC, "EVG Mux Output Polarity")
    field( OUT , "#C$(cardNum) S$(mxcNum) @")
    field( PINI, "YES")
    field( VAL,  "0")
    field( UDF,  "0")
    field( ZNAM, "Orginal")
    field( ONAM, "Inverted")
    info( autosaveFields_pass0, "VAL")
}

