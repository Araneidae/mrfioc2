record(bo, "$(P)OutPolarity-Sel") {
    field( DTYP, "EVG Mxc")
    field( DESC, "EVG Mux Output Polarity")
    field( OUT , "#C$(cardNum) S$(mxcNum) @")
    field( PINI, "YES")
    field( VAL,  "0")
    field( UDF,  "0")
    field( ZNAM, "Orginal")
    field( ONAM, "Inverted")
    info( autosaveFields_pass0, "VAL")
}

record(bi, "$(P)OutStatus-RB") {
    field( DTYP, "EVG Mxc")
    field( DESC, "EVG Mux Output Status")
    field( INP , "#C$(cardNum) S$(mxcNum) @")
    field( ZNAM, "0")
    field( ONAM, "1")
}

record(ao, "$(P)Freq-SP") {
    field( DTYP, "EVG Mxc")
    field( DESC, "EVG Mux Frequency")
    field( OUT,  "#C$(cardNum) S$(mxcNum) @")
    field( EGU,  "Hz")
    field( HOPR, "62500000")
    field( LOPR, "0.029")
    field( DRVH, "62500000")
    field( DRVL, "0.029")
    field( PREC, "3")
    field( FLNK, "$(P)Freq-RB")
    info( autosaveFields_pass0, "VAL")
}

record(ai, "$(P)Freq-RB") {
    field( DTYP, "EVG Mxc")
    field( DESC, "EVG Mux Frequency")
    field( INP,  "#C$(cardNum) S$(mxcNum) @")
    field( EGU,  "Hz")
    field( HOPR, "62500000")
    field( LOPR, "0.029")
    field( PREC, "3")
    field( FLNK, "$(P)Prescaler-RB")
}

record(longout, "$(P)Prescaler-SP") {
    field( DTYP, "EVG Mxc")
    field( DESC, "EVG Mux Prescaler")
    field( OUT,  "#C$(cardNum) S$(mxcNum) @")
    field( PINI, "YES")
    field( VAL,  "2")
    field( UDF,  "0")
    field( EGU, "Evt Clk Tick")
    field( FLNK, "$(P)Freq-RB")
    info( autosaveFields_pass0, "VAL")
}

record(longin , "$(P)Prescaler-RB") {
    field( DTYP, "EVG Mxc")
    field( DESC, "EVG Mux Prescaler RB")
    field( INP,  "#C$(cardNum) S$(mxcNum) @")
}

#
# When Evt Clock Frequency changes, Mxc Freq changes keeping the Prescaler same.
#
record(ai, "$(P)EvtClkFreq-RB_") {
    field( INP,  "$(P)EvtClkFreq-RB CP")
    field( FLNK, "$(P)Freq-RB")
}
