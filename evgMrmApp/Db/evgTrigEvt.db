record(bo, "EVG$(cardNum):TrigEvt$(trigEvtNum):Ena") {
	field( DTYP, "EVG Trig Evt")
  	field( DESC, "EVG Trigger Event Enable")
  	field( OUT , "#C$(cardNum) S$(trigEvtNum) @")
	field( UDF, "0")
  	field( ZNAM, "Disabled")
  	field( ONAM, "Enabled")
}

record(longout, "EVG$(cardNum):TrigEvt$(trigEvtNum):Code") {
	field( DTYP, "EVG Trig Evt")
	field( DESC, "EVG Trigger Event Code")
	field( OUT, "#C$(cardNum) S$(trigEvtNum) @")
	field( UDF, "0")
}
