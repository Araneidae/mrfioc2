# Base record set for an EVR

record(bi, "$(P)enable") {
  field(DTYP, "EVR")
  field(INP , "#C$(C) S0 @Enable")
  field(DESC, "Master enable for EVR device")
  field(ZNAM, "Disabled")
  field(ONAM, "Enabled")
}

record(bo, "$(P)enable:set") {
  field(DTYP, "EVR")
  field(OUT , "#C$(C) S0 @Enable")
  field(DESC, "Master enable for EVR device")
  field(PINI, "YES")
  field(VAL , 0)
  field(UDF , 0)
  field(FLNK, "$(P)enable")
  field(ZNAM, "Disabled")
  field(ONAM, "Enabled")
}

record(bi, "$(P)pll") {
  field(DTYP, "EVR")
  field(INP , "#C$(C) S0 @PLL Lock Status")
  field(SCAN, "I/O Intr")
  field(PINI, "YES")
  field(DESC, "Status of PLL")
  field(ZNAM, "Error")
  field(ONAM, "OK")
}

record(longin, "$(P)hwtype") {
  field(DTYP, "EVR")
  field(INP , "#C$(C) S0 @Model")
  field(PINI, "YES")
  field(DESC, "Hardware type code")
}

record(longin, "$(P)ver") {
  field(DTYP, "EVR")
  field(INP , "#C$(C) S0 @Version")
  field(PINI, "YES")
  field(DESC, "Firmware version")
}
