record(waveform, "$(P)$(O)pat") {
  field(DESC, "Pattern setting")
  field(DTYP, "Obj Prop waveform out")
  field(INP, "@OBJ=$(OBJ), PROP=Waveform")
  field(PINI, "YES")
  field(FTVL, "UCHAR")
  field(NELM, "$(MAX=40940)") # 20*2047
  field(HOPR, "1")
  field(LOPR, "0")
  field(FLNK, "$(P)$(O)pat:rbv")
  info(autosaveFields_pass1, "VAL")
}

