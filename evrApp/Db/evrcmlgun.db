# Extra properties for cPCI-EVRTG-300
# in addition to evrcml.db
#
# Macros:
#  ON = output record name prefix
#  OBJ = devObj name

record(ao, "$(ON)Delay-SP") {
    field( DTYP, "EVR CML")
    field( OUT , "@OBJ=$(OBJ), P=Fine Delay")
    field(PINI, "YES")
    field(LINR, "LINEAR")
    field(ESLO, "9")
    field( EGU, "ps")
    field( VAL, "0.0")
    field( UDF, "0")
    field(HOPR, "8")
    field(LOPR, "0")
    field(DRVH, "7") # GUN-RC-300 operates only at ~500 MHz RF
    field(DRVL, "0")
    field(FLNK, "$(ON)Delay-RB")
    info(autosaveFields_pass0, "VAL")
}

record(ai, "$(ON)Delay-RB") {
    field( DTYP, "EVR CML")
    field( OUT , "@OBJ=$(OBJ), P=Fine Delay")
    field(PINI, "YES")
    field(LINR, "LINEAR")
    field(ESLO, "9")
    field( EGU, "ps")
    field( VAL, "0.0")
    field( UDF, "0")
    field(HOPR, "8")
    field(LOPR, "0")
    field(DRVH, "7") # GUN-RC-300 operates only at ~500 MHz RF
    field(DRVL, "0")
    info(autosaveFields_pass0, "VAL")
}


