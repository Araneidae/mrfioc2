
# EVT  - Timing hardware event code
# ENUM - EPICS DB event number
record(longout, "$(P)$(N)") {
  field(DTYP, "EVR Event")
  field(SCAN, "I/O Intr")
  field(OUT , "@Card=$(C),Code=$(CODE)")
  field(VAL , "$(EVNT)")
  field(TSE , "-2") # from device support
  field(FLNK, "$(P)$(N):count")
  info(autosaveFields_pass0, "OUT VAL")
}

record(calc, "$(P)$(N):count") {
  field(SDIS, "$(P)$(N)")
  field(DISV, "0")
  field(CALC, "A+1")
  field(INPA, "$(P)$(N):count NPP")
  field(TSEL, "$(P)$(N).TIME")
}
