# Pulser sub-unit records for an EVR

record(ao, "$(P)$(N)delay:set") {
  field(DTYP, "EVR Pulser")
  field(OUT , "#L$(C) A$(PID) C0 S0 @Delay")
  field(PINI, "YES")
  field(DESC, "Pulser delay from start")
  field(VAL , 0)
  field(EGU , "Sec")
  field(PREC, 6)
  field(FLNK, "$(P)$(N)delay")
}

record(ai, "$(P)$(N)delay") {
  field(DTYP, "EVR Pulser")
  field(INP , "#L$(C) A$(PID) C0 S0 @Delay")
  field(UDF , 0)
  field(EGU , "Sec")
  field(PREC, 6)
  field(FLNK, "$(P)$(N)delay:raw")
}

record(longout, "$(P)$(N)delay:raw:set") {
  field(DTYP, "EVR Pulser")
  field(OUT , "#L$(C) A$(PID) C0 S0 @Delay")
  field(DESC, "Pulser delay from start")
  field(FLNK, "$(P)$(N)delay")
}

record(longin, "$(P)$(N)delay:raw") {
  field(DTYP, "EVR Pulser")
  field(INP , "#L$(C) A$(PID) C0 S0 @Delay")
}

