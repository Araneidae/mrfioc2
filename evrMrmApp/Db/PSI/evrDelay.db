# Delay Module control
#
# Macros:
#  ON = output record name prefix
#  OBJ = devObj name

record(bo, "$(ON)Ena-SP") {
  field( DESC, "Enable")
  field( DTYP, "Obj Prop bool")
  field( OUT , "@OBJ=$(OBJ), PROP=Enable")
  field( PINI, "YES")
  field( ZNAM, "Disabled")
  field( ONAM, "Enabled")
  field( VAL , "$($(OBJ)-Ena-SP\=1)") # Default to enabled
  field( FLNK, "$(ON)Ena-RB")
  info(autosaveFields_pass0, "VAL")
}

record(bi, "$(ON)Ena-RB") {
  field( DESC, "Is module enabled")
  field( DTYP, "Obj Prop bool")
  field( INP , "@OBJ=$(OBJ), PROP=Enable")
  field( ZNAM, "Disabled")
  field( ONAM, "Enabled")
}

record(ao, "$(ON)Delay0-SP") {
  field( DESC, "First delay output")
  field( DTYP, "Obj Prop double")
  field( OUT , "@OBJ=$(OBJ), PROP=Delay0")
  field( EGU , "ns")
  field( PINI, "YES")
  field( VAL, "$($(OBJ)-Delay0-SP\=2.200)")
  field( HOPR, "12.430")
  field( LOPR, "2.200")
  field( PREC, 2)
  field( FLNK, "$(ON)Delay0-RB")
  info( autosaveFields_pass0, "VAL")
}

record(ai, "$(ON)Delay0-RB") {
  field( DESC, "First delay readback")
  field( DTYP, "Obj Prop double")
  field( INP , "@OBJ=$(OBJ), PROP=Delay0")
  field( HIHI, "12.431")
  field( LOLO, "2.199")
  field( PREC, 2)
  field( EGU,  "ns")
}

