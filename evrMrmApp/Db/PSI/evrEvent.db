# Mapping between hardware event code and a software database event
#
# Macros:
#  EN = record name prefix
#  OBJ = EVR devObj name
#  CODE = Event code (hardware)
#  EVNT = Database event code (software)
#

# EVT  - Timing hardware event code
# ENUM - EPICS DB event number
record(longout, "$(SYS)-$(EVR):Event-$(CODE)-SP") {
  field(DTYP, "EVR Event")
  field(SCAN, "I/O Intr")
  field(OUT , "@OBJ=$(EVR),Code=$(CODE)")
  field(VAL , "$(EVNT)")
  field(TSE , "-2") # from device support
  field(FLNK, "$(SYS)-$(EVR):Event-$(CODE)-Cnt-I")
  info(autosaveFields_pass0, "OUT VAL")
}

record(calc, "$(SYS)-$(EVR):Event-$(CODE)-Cnt-I") {
  field(SDIS, "$(SYS)-$(EVR):Event-$(CODE)-SP")
  field(DISV, "0")
  field(CALC, "A+1")
  field(INPA, "$(SYS)-$(EVR):Event-$(CODE)-Cnt-I NPP")
  field(TSEL, "$(SYS)-$(EVR):Event-$(CODE)-SP.TIME")
  field(LOLO, "0")
  field(LLSV, "MINOR")
}
