# Control for mapping a function to an event code in hardware
#
# Macros:
#  NAME = record name
#  OBJ = EVR devObj name
#  func = Function to be mapped
#    Choices are: "FIFO", "Latch TS", "Blink", "Forward",
#                 "Stop Log", "Log", "Heartbeat", "Reset PS",
#                 "TS reset", "TS tick", "Shift 1", "Shift 0",
#

record(longout, "$(SYS,undefined):$(EVR,undefined)-Evtmap-$(EVT,recursive)-DNC") {
  field( DTYP, "EVR Mapping" )
  field( OUT , "@OBJ=$(EVR,undefined), Func=$(FUNC,undefined)")
  field( PINI, "YES")
  field( DESC, "Mapping for $(FUNC,undefined)")
  field( VAL , $(EVT,recursive))
  field( LOPR, "0")
  field( HOPR, "255")
  field( DRVL, "0")
  field( DRVH, "255")
  info(autosaveFields_pass0, "OUT VAL")
}
